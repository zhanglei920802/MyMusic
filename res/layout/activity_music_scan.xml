<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dip" >

    <include layout="@layout/nav_common_bar" />

    <RelativeLayout
        android:id="@+id/scaning_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dip"
        android:visibility="visible" >

        <Button
            android:id="@+id/scan_music"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="fill"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/setting_login_btn_bg"
            android:text="@string/scan_music_in_sdcard"
            android:textColor="@color/login_text2_register_color"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/cur_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/scan_music"
            android:layout_centerHorizontal="true"
            android:text="cur_music_name" />
    </RelativeLayout>

</LinearLayout>